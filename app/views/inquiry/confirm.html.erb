<div class="row">
    <div class="col-md-4 col-md-offset-4">

    <div class="page-header">
      <h1>問い合わせ確認画面</h1>
    </div>

    <%= form_for @inquiry, :url => inquiry_thanks_path do |f| %>
            <table class="table">
              <tr>
                <th>名前</th>
                <td>
                  <%= f.hidden_field :name %>
                  <%= @inquiry.name %>
                </td>
              </tr>
              
              <tr>
                <th>所属</th>
                <td>
                  <%= f.hidden_field :belonging %>
                  <%= @inquiry.belonging %>
                </td>
              </tr>
              
              <tr>
                <th>メールアドレス</th>
                <td>
                  <%= f.hidden_field :email %>
                  <%= @inquiry.email %>
                </td>
              </tr>
          
              <tr>
                <th>電話番号</th>
                <td>
                  <%= f.hidden_field :phone %>
                  <%= @inquiry.phone %>
                </td>
              </tr>
          
              <tr>
                <th>問い合わせ内容</th>
                <td>
                  <%= f.hidden_field :message %>
                  <%= simple_format(@inquiry.message) %>
                </td>
              </tr>
            </table>
            <h2><%= f.submit '送信', class: 'btn btn-primary' %>
            <%= f.submit '戻る', class: 'btn btn-primary', name: 'back' %></h2>
    <% end %>
  　</div>
</div>